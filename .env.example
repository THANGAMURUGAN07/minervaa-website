# Backend API URL
VITE_API_URL=http://localhost:3001

# Cloudinary Configuration
# Get these from your Cloudinary dashboard at https://cloudinary.com/console
VITE_CLOUDINARY_CLOUD_NAME=your_cloud_name_here
VITE_CLOUDINARY_UPLOAD_PRESET=minervaa
VITE_CLOUDINARY_ASSET_FOLDER=public

# Email (SMTP) settings for contact form - DO NOT COMMIT REAL CREDENTIALS
# Example for Gmail SMTP using an App Password (set actual values in your environment)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
# Set `EMAIL_USER` to the sender address (e.g. thangamuruganr45@gmail.com)
EMAIL_USER=your_sender@gmail.com
# Set `EMAIL_PASSWORD` to your Gmail App Password (DO NOT commit this)
EMAIL_PASSWORD=your_app_password_here
# Where incoming contact form emails should be delivered
RECIPIENT_EMAIL=recipient@example.com
